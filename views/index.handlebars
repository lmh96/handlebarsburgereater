<h1>Burgers</h1>
<h2>I hope you're here to eat burgers</h2>

<h2>Not Eaten</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <div>
            <h3>{{burger_name}}</h3>
            <button class="delete-btn" id={{id}}>
                X
            </button>
            <button class="eat-btn" id={{id}}>
                Eat
            </button>
        </div>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <div>
            <h3>{{burger_name}}</h3>
        </div>
        <button class="delete-btn" id={{id}}>
            ðŸ’©
        </button>
    </li>
    {{/if}}
    {{/each}}
</ul>

